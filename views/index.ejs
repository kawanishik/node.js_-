<title>掲示板</title>
<style type="text/css">
    thead, tbody {
      display: block;
    }
    tbody {
      overflow-x: hidden;
      overflow-y: scroll;
      height: 400px;
    }
    .inline-block_test {
        display: inline-block;      /* インラインブロック要素にする */
        background-color:  #ccc;    /* 背景色指定 */
        padding:  20px;             /* 余白指定 */
        height: 100px;              /* 高さ指定 */  
    }
    .column-pair1 {
        display: inline-block;
        padding: 10px;
        width: 600px;
        height: 300px;
    }
    .column-pair2 {
        display: inline-block;
        padding: 10px;
    }

</style>
</head>
    <body>
        <nav class="navbar navbar-dark bg-primary mb-2">
            <a href="#" class="navbar-brand">掲示板</a>
        </nav>
        
        <div class="container">
            <div class="column-pair1">
                <form action="/" method="POST">
                    <div class="form-group">
                        <label for="text1">user : </label>
                        <input type="text" id="message" name="message" class="form-control" autofocus>
                        <label for="text2">メッセージ:</label>
                        <input type="text" id="message" name="message" class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-block btn-outline-success">送信</button>
                        <!-- <iframe src="views/button.html" name="hoge"></iframe> -->
                    </div>
                </form>
            </div>
            <div class="column-pair2">
                <iframe width="400" height="250" src="https://www.youtube.com/embed/7vGbYscwSPI" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <ul class="list-group">
                <!-- <% message_list.forEach(function (name, message, key) { %>
                    <li class="list-group-item"><%= name %> <%= message %></li>
                <% }); %> -->
                会話履歴の表示
                <div>
                    <table border="1">
                        <thread>
                            <tr><th>User名</th><th>投稿内容</th><th>投稿時間</th></tr>
                        </thread>
                        <tdbody>
                            <% for (var i=0; i < message_list[0].length; i++) {%>
                                <tr>
                                    <td height="50" width="200"><%= message_list[0][i] %></td>
                                    <td height="50" width="750"><%= message_list[1][i] %></td>
                                    <td height="50" width="200"><%= message_list[2][i] %></td>
                                <tr>
                            <% } %>
                        </tdbody>
                    </table>
                </div>
            </ul>
        </div>
